<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:id="@+id/now_playing_drawer_frame_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <android.support.v4.widget.DrawerLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools" 
	    android:id="@+id/main_activity_drawer_root"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	
		<RelativeLayout
		    android:id="@+id/nowPlayingRootContainer"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    tools:context=".NowPlayingActivity" >
		    
		    <RelativeLayout
		        android:id="@+id/nowPlayingEqualizerPlaceholder"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent" >
		        
			</RelativeLayout>
		 	
		    <RelativeLayout
		        android:id="@+id/nowPlayingFrontLayout"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent" >
			
			 	<RelativeLayout
			 	    android:id="@+id/nowPlayingLyricsLayout"
			 	    android:layout_width="fill_parent"
			 	    android:layout_height="fill_parent"
			 	    android:layout_above="@+id/relativeLayout1"
			 	    android:layout_centerHorizontal="true"
			 	    android:layout_centerVertical="true" >
			 	    
			 	</RelativeLayout>
			 	
			 	<com.velocity.view.pager.library.VelocityViewPager
			 	    android:id="@+id/nowPlayingPlaylistPager"
			 	    android:layout_width="fill_parent"
			 	    android:layout_height="fill_parent"
			 	    android:layout_above="@+id/relativeLayout1"
			 	    android:layout_below="@+id/seekbar_progress_bar_parent"
			 	    android:layout_centerHorizontal="true" />
			 	
			 		<RelativeLayout 
				 	    android:id="@+id/seekbar_progress_bar_parent"
				 	    android:layout_width="fill_parent"
				 	    android:layout_height="wrap_content"
				 	    android:background="@drawable/now_playing_controls_background_light"
				 	    android:layout_alignParentTop="true" >
					 	
				 	    <TextView
				 	        android:id="@+id/elapsedTime"
				 	        android:layout_width="wrap_content"
				 	        android:layout_height="wrap_content"
				 	        android:textAppearance="?android:attr/textAppearanceSmall"
				 	        android:text="0:00"
				 	        android:layout_alignParentLeft="true" 
				 	        android:layout_marginLeft="15dp"
				 	        android:layout_centerVertical="true" />
				 	    
				 	    <TextView
				 	        android:id="@+id/remainingTime"
				 	        android:layout_width="wrap_content"
				 	        android:layout_height="wrap_content"
				 	        android:textAppearance="?android:attr/textAppearanceSmall"
				 	        android:text="-0:00"
				 	        android:layout_alignParentRight="true"
				 	        android:layout_marginRight="15dp"
				 	        android:layout_marginTop="15dp"
				 	        android:layout_centerVertical="true" />
				 	    
				 	    <SeekBar 
					 	    android:id="@+id/nowPlayingSeekBar" 
					 	    android:layout_width="match_parent"
					 	    android:layout_height="wrap_content"
					 	    android:paddingTop="15dp"
					 	    android:paddingBottom="15dp"
					 	    android:layout_centerVertical="true"
					 	    android:layout_toRightOf="@+id/elapsedTime"
					 	    android:layout_toLeftOf="@+id/remainingTime"
					 	    android:layout_marginLeft="15dp"
					 	    android:layout_marginRight="15dp"
					 	    android:thumb="@drawable/transparent_drawable" />
					 	
					 	<ProgressBar
				            android:id="@+id/startingStreamProgressBar"
				            android:layout_width="match_parent"
					 	    android:layout_height="wrap_content"
					 	    style="?android:attr/progressBarStyleHorizontal"
					 	    android:indeterminateOnly="true"
					 	    android:paddingTop="15dp"
					 	    android:paddingBottom="15dp"
					 	    android:layout_centerVertical="true"
					 	    android:layout_toRightOf="@+id/elapsedTime"
					 	    android:layout_toLeftOf="@+id/remainingTime"
					 	    android:layout_marginLeft="15dp"
					 	    android:layout_marginRight="15dp"
					 	    android:thumb="@drawable/transparent_drawable" />
				 	    
					</RelativeLayout>
	
				    <RelativeLayout
				        android:id="@+id/relativeLayout1"
				        android:layout_width="match_parent"
				        android:layout_height="72dp"
				        android:layout_alignParentBottom="true"
				        android:layout_centerHorizontal="true"
				        android:background="@drawable/controls_bg_white" >
				
				        <ImageButton
				            android:id="@+id/previousButton"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_centerHorizontal="true"
				            android:layout_centerVertical="true"
				            android:padding="5dp"
				            android:alpha="0.7"
				            android:background="?android:selectableItemBackground"
				            android:src="@drawable/btn_playback_previous"
				            android:layout_toLeftOf="@+id/playPauseButton"
				            android:layout_marginRight="15dp" />
				        
				        <ImageButton
				            android:id="@+id/nextButton"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_centerHorizontal="true"
				            android:layout_centerVertical="true"
				            android:padding="5dp"
				            android:alpha="0.7"
				            android:background="?android:selectableItemBackground"
				            android:src="@drawable/btn_playback_next"
				            android:layout_toRightOf="@+id/playPauseButton"
				            android:layout_marginLeft="15dp" />
				        
				        <ImageButton
				            android:id="@+id/playPauseButton"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_centerHorizontal="true"
				            android:layout_centerVertical="true"
				            android:scaleX="0.6"
				            android:scaleY="0.6"
				            android:padding="5dp"
				            android:background="?android:selectableItemBackground"
				            android:src="@drawable/play_button_states" />
			
				        <RelativeLayout
				            android:id="@+id/repeatButtonLayout"
				           	android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_centerVertical="true"
				            android:layout_toLeftOf="@+id/previousButton" >
				            
				       		<ImageButton
				            	android:id="@+id/shuffleButton"
				            	android:layout_width="wrap_content"
				            	android:layout_height="wrap_content"
				            	android:layout_centerHorizontal="true"
				            	android:background="?android:selectableItemBackground"
				            	android:padding="5dp"
				            	android:layout_centerVertical="true"
				            	android:scaleX="0.75"
				            	android:scaleY="0.75"
				            	android:src="@drawable/shuffle" />
				            
				            <ImageView
					            android:id="@+id/helper_shuffle"
				            	android:layout_width="wrap_content"
				            	android:layout_height="wrap_content"
				           		android:layout_alignParentTop="true"
				            	android:layout_centerHorizontal="true"
					            android:src="@drawable/cling" 
					            android:scaleType="centerCrop"
					            android:layout_marginTop="15dp"
					            android:visibility="invisible" />
				            
				        </RelativeLayout>
			
				        <RelativeLayout
				            android:id="@+id/repeatButtonLayout"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentTop="true"
							android:layout_centerVertical="true"
				            android:layout_toRightOf="@+id/nextButton" >
				            
				            <ImageButton
				            	android:id="@+id/repeatButton"
				            	android:layout_width="wrap_content"
				            	android:layout_height="wrap_content"
								android:layout_centerVertical="true"
				            	android:layout_centerHorizontal="true"
				            	android:background="?android:selectableItemBackground"
				            	android:padding="5dp"
				            	android:scaleX="0.75"
				            	android:scaleY="0.75"
				            	android:src="@drawable/repeat" />
				            
				            <ImageView
					            android:id="@+id/helper_repeat"
				            	android:layout_width="wrap_content"
				            	android:layout_height="wrap_content"
				           		android:layout_alignParentTop="true"
				           		android:layout_marginTop="15dp"
				            	android:layout_centerHorizontal="true"
					            android:src="@drawable/cling" 
					            android:scaleType="centerCrop"
					            android:visibility="invisible" />
				            
				        </RelativeLayout>
			        
			    </RelativeLayout>
			    
			</RelativeLayout>
		
		</RelativeLayout>
		
		<RelativeLayout
	        android:id="@+id/queue_drawer"
	        android:layout_width="320dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="end" >

	    </RelativeLayout>
		
	</android.support.v4.widget.DrawerLayout>
    
</FrameLayout>