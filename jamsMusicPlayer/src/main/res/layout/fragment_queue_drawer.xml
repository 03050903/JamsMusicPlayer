<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mobeta.android.dslv.DragSortListView
        xmlns:dslv="http://schemas.android.com/apk/res/com.jams.music.player"
        android:id="@+id/queue_drawer_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        dslv:click_remove_id="@+id/queue_remove_song"
        dslv:drag_enabled="true"
        dslv:drag_handle_id="@+id/drag_handle"
        dslv:drag_scroll_start="0.33"
        dslv:drag_start_mode="onDown"
        dslv:float_alpha="0.6"
        dslv:max_drag_scroll_speed="0.8"
        dslv:remove_enabled="true"
        dslv:remove_mode="clickRemove"
        dslv:slide_shuffle_speed="0.5"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/queue_drawer_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_music_playing"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:visibility="visible" />

    <TextView
        android:id="@+id/queue_drawer_empty_text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/queue_empty_info"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="visible"
        android:layout_alignLeft="@+id/queue_drawer_empty_text"
        android:layout_alignStart="@+id/queue_drawer_empty_text"
        android:layout_alignRight="@+id/queue_drawer_empty_text"
        android:layout_alignEnd="@+id/queue_drawer_empty_text"
        android:layout_marginRight="-40dp"
        android:layout_marginLeft="-40dp"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/queue_drawer_empty_text"
        android:layout_marginTop="30dp" />

</RelativeLayout>