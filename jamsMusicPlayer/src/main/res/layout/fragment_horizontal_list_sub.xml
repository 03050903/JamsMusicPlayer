<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/horiz_list_sub_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/horiz_list_sub_activity_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@android:color/black" />

    <RelativeLayout
        android:id="@+id/horiz_list_sub_activity_content"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/horiz_list_sub_activity_header"
        android:visibility="invisible"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Content layout."
            android:padding="20dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/horiz_list_sub_activity_header_image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:id="@+id/horiz_list_sub_activity_header"
        android:layout_height="230dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/horiz_list_sub_activity_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Text"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:ellipsize="marquee" />

    </RelativeLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/horiz_list_sub_activity_header_profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="182dp"
        android:layout_marginRight="25dp" />

</RelativeLayout>
